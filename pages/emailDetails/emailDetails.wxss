/* pages/emailDetails/emailDetails.wxss */
.adapter_item {
  padding-left: 12rpx;
  display: flex;
  flex-direction: row;
  border-bottom: solid 1rpx rgb(199, 195, 195);  
}

.item_left
{
  width: 120rpx;
  height: 260rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  vertical-align: center;
}

.item_state{
  margin-top: 50rpx;
  width: 35rpx;
  height: 35rpx;
}

/* 用户头像样式*/
.talk-item-face { 
    margin-top: 20rpx;
    margin-left: 20rpx;
    width: 120rpx;  
    height: 120rpx;  
    border-radius: 50%;
}


.item_content {
  width: 0rpx;
  height: 260rpx;
  padding-left: 20rpx;
  margin-left: 15rpx;
  display: flex;
  align-items: left;
  flex-direction: column;
  flex: 1;
}




.item_state{
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
}



/*最上面的元素*/
.item_top{
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}


.item_id {
  height: 80rpx;
  width: 200rpx;
  line-height: 80rpx;
  vertical-align: left;
  color: rgb(12, 12, 12);
  font-weight: bold;
  font-size: 1.1rem;
}

.item_time {
  height: 80rpx;
  width: 180rpx;
  line-height: 80rpx;
  font-size: 0.8rem;
  display: flex;
  justify-content: flex-end;
  flex-grow: 1;
  color: gray;
  margin-right: 5rpx;
}
.item_go{
  width: 30rpx;
  height: 30rpx;
  display: flex;
  justify-content: flex-end;
  margin-right: 20rpx;

}


/*********主题内容*************/
.item_title {
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  align-content: center;
  color: gray;
  font-size: 0.9rem;
  padding-right: 50rpx;
 
}


/******* 底部一行样式********/
.item_bottom{
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  margin-top: 5rpx;
  justify-content: flex-end;
}

.item_delete{
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
}

.clearAll{
   display:flex;
   justify-content:flex-start ;
   position:fixed;
   bottom:20rpx;
   left:20rpx;
}

.clearAll text
{
  line-height: 80rpx;
  vertical-align: left;
  color: rgb(12, 12, 12);
  font-size: 1.2rem;

}
.item_deleteAll{
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
  justify-content: flex-start
}

