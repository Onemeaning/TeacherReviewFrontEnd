.row{
  line-height:50px;
  border-bottom:1px solid #ccc;
  color:#777;
  overflow:hidden;
  background-color: #fff;
}

.title{
  padding-left:10px;
  width:90px;
  float:left;
}

textarea {
  background-color: white;
  width: 90%;
  padding: 20rpx;
  height: 350rpx;
  border: #4f515348 solid 1rpx;
  margin: auto;
  margin-top: 40rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  caret-color: #3a96ff
}


.resume{
  margin-left: 20rpx;
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
}

.btnImg {
  margin-left: 10rpx;
  width: 50rpx;
  height: 50rpx;
}

.resumeImageOut{
  margin-top: 40rpx;
  display: flex;
  width:210rpx; 
  height:300rpx; 
  margin-left:20rpx;
  border-radius: 10rpx;
  justify-content: center;
  align-items: center;
  border: #4f515348 solid 1rpx;
}

.resumeImage{
  width:210rpx; 
