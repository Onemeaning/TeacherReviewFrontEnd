/* pages/about/about.wxss 
在这个文件中定义样式规则，可以在wxml中通过class属性来使用样式
*/
.header {
    margin: 90rpx 0 90rpx 50rpx;
    text-align: center;
    width: 650rpx;
    height: 300rpx;
    line-height: 450rpx;
}

.header image {
    width: 300rpx;
    height: 300rpx;
}

.content {
    margin-left: 50rpx;
    margin-bottom: 90rpx;
}

.content text {
    display: block;
    color: #9d9d9d;
    margin-top: 40rpx;
}
.bottom { 
  width: 90%; 
  align-items: center;
  height: 90rpx; 
  line-height: 90rpx; 
  background: #2A76BC; 
  border-radius: 98rpx;
  color:#fff; 
}

.bottom-hover{
background: rgb(19, 54, 87); 
}


.copy_bottom{
  margin-top: 200rpx;
  height: 30rpx;
  bottom: 20rpx;
  display: flex;
  justify-content: center;
  flex-direction: row;
}

.copy_bottom text{
  font-size: small;
  text-decoration:underline;
  color: gray;
  margin-left: 10rpx;
}