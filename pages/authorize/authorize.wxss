/* pages/about/about.wxss 
在这个文件中定义样式规则，可以在wxml中通过class属性来使用样式
*/
.header {
    margin: 90rpx 0 90rpx 50rpx;
    text-align: center;
    width: 650rpx;
    height: 300rpx;
    line-height: 450rpx;
}

.header image {
    width: 300rpx;
    height: 300rpx;
}

.content {
    margin-left: 50rpx;
    margin-bottom: 90rpx;
}

.content text {
    display: block;
    color: #9d9d9d;
    margin-top: 40rpx;
}
.bottom { 
  width: 90%; 
  align-items: center;
  height: 90rpx; 
  line-height: 90rpx; 
  background: #2A76BC; 
  border-radius: 98rpx;
  color:#fff; 
}

.bottom-hover{
background: rgb(19, 54, 87); 
}


.copy_bottom{
  position: fixed;
  bottom: 20rpx;
  left: 240rpx;
  width: 100%;
}

.copy_bottom text{
  font-size: small;
  text-decoration:underline;
  color: gray;
  text-align: center;
}



.identity{
  display: flex;
  flex-direction: row;
  height: 400rpx;
  margin-bottom: 20rpx;
}

.teacher{
  width: 300rpx;
  display: flex;
  flex-direction: column;
  justify-content:center;
}

.student{
  width: 300rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.image{
  padding: 20rpx;
  height: 60rpx;
  width: 60rpx;
}
.text{
  align-self: center;
  
}