/* pages/eamilsDetailsInfo/eamilsDetailsInfo.wxss */
page{
  background: #eee;
}
.email{
  display: flex;
  flex-direction: column;
  padding: 12rpx;
}


.adapter_item {
  background: #fff;
  padding-left: 12rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  border-bottom: solid 1rpx rgb(199, 195, 195);  
}

/* 用户头像样式*/
.talk-item-face { 
    margin-left: 20rpx;
    width: 100rpx;  
    height: 100rpx;  
    border-radius: 10%;
}

.item_content {
  width: 600rpx;
  padding-left: 20rpx;
  margin-left: 15rpx;
  display: flex;
  align-items: left;
  justify-content: flex-start;
  flex-direction: column;
}

/*最上面的元素*/
.item_top{
  width: 550rpx;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}


.item_id {
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;

  height: 80rpx;
  line-height: 80rpx;
  vertical-align: left;
  color: rgb(12, 12, 12);
  font-weight: bold;
  font-size: 1.1rem;
}

.item_time {
  width: 300rpx;
  line-height: 80rpx;
  font-size: 0.8rem;
  display: flex;
  justify-content: flex-start;
  flex-grow: 1;
  color: gray;
  margin-right: 20rpx;
}


/*********主题内容*************/
.item_detail {
  background: #fff;
  padding: 20rpx;
  width: 95%;
  color: gray;
  font-size: 0.9rem;
  vertical-align: middle;
  display: flex;
  flex-wrap:wrap;
}


/******* 底部一行样式********/
.item_bottom{
  width: 80rpx;
  height: 80rpx;
  position: fixed;
  right: 20rpx;
  top: 20rpx;
}

.item_delete{
  width: 50rpx;
  height: 50rpx;
  justify-content: flex-end;
  margin-top: 10rpx;
  margin-right: 20rpx;
}

.resumePhoto{
  margin-top: 20rpx;
  display: flex;
  width:100%; 
  border-radius: 10rpx;
  justify-content: center;
  align-items: center;
  border: #4f515348 solid 1rpx;
}






/* 历史记录 */
.his_adapter_item{
  padding-left: 12rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
}

.his_item_detail {
  padding-top:20rpx;
  padding-bottom: 10rpx;
  margin-left: 20rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  width: 500rpx;
  color:rgb(80, 80, 80);
  font-size: 1.0rem;
  vertical-align: middle;
