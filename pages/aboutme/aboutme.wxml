<view class='content'>
  <view class='nav'>
    <view class='top'>
      <open-data type="userAvatarUrl" ></open-data>
    </view>
    <view class='nickname'>
      <open-data type="userNickName"></open-data> 
    </view>

  </view>
    <view class='item'>
      <text class='left'>账号：</text><text class='right'>{{uid}}</text>
    </view>
    <view class='item'>
      <text class='left'>学校：</text><text class='right'>湖大信息</text>
    </view>
    <view class='item'>
      <text class='left'>学院：</text><text class='right'>{{myinfo.name}}</text>
    </view>
    <view class='item'>
     <text class='left'> 系部：</text><text class='right'>{{myinfo.classname}}</text>
    </view>
    <view class='item'>
      <text class='left'>学号：</text><text class='right'>{{myinfo.departmentname}}</text>
    </view>
    <view class='item' bindtap='setemail'>
     <text class='left'> 邮箱：</text><text class='right' wx:if="{{myinfo.email==''|| myinfo.email==null}}">未绑定</text><text class='right' wx:else>{{myinfo.email}}</text>
    </view>
    <view class='item' bindtap='addTeacherInfo'>
     <text class='left'> 导师：</text><text class='right'>添加导师的信息</text>
    </view>   
    <button class='bottom' type='primary' bindtap='updateUserInfo'>修改个人信息 </button>

</view>

