/* pages/comment/comment.wxss */
@import '../../model/model.wxss';

view.search {
    display: flex;
    flex-direction: row;
    height: 98rpx;
    background: #2A76BC;
    align-items: center;
}

view.searchItem {
    display: flex;
    width: 100%;
    height: 70rpx;
    background: rgba(240, 238, 254, 0.7);
    flex-direction: row;
    border-radius: 98rpx;
    margin-right: 20rpx;
    margin-left: 20rpx;
}

view.searchItem image {
    height: 42rpx;
    width: 42rpx;
    align-self: center;
    margin-left: 20rpx;
    margin-right: 20rpx;
}

view.searchItem input {
    flex: 1;
    padding-top: 10rpx;
    font-size: 33rpx;
    color: rgb(98, 111, 161)

}

view.searchItem text{

    align-self: center;
    margin-left: 10rpx;
    margin-right: 30rpx;  
    color: black;
    
}



.swiperstyle{
  display: flex;
  flex-direction: column;
  height:100vh;
  background:rgb(255, 255, 255);
}
.swiperstyleHide{
  position: fixed;
  bottom: -100%rpx;
  height: 0;  
  width: 100%;  
  overflow: hidden
}

.all-teacher-css
{
 margin-top: 30rpx;
 height:86vh;
 display: flex;
 flex-direction: column;
 align-items: center;
 background:#eee;  
 border-radius:3%;
 width: 660rpx;
}

.all-teacher-css-hover
{
 background:rgb(204, 202, 202);
}



.all-teacher-css-before
{
 margin-top: 30rpx;
 height:86vh;
 display: flex;
 flex-direction: column;
 align-items: center;
 background:rgb(247, 247, 247); 
 border-radius:3%;
 width: 730rpx;
}
.teacher-detail
{
  margin-top: 30rpx;
  display: flex;
  flex-direction: column;
  text-align: left;
  font-size: small;
}
.picture{
  margin-top: 40rpx;
  height: 200rpx;
  width: 250rpx;
  border-radius:50%;
}
.intro_text{
  overflow:hidden; 
  margin-left: 20rpx;
  text-overflow:ellipsis;
  display:-webkit-box; 
  -webkit-box-orient:vertical;
  -webkit-line-clamp:3; 
}

.intro_text_before{
  overflow:hidden; 
  margin-left: 20rpx;
  text-overflow:ellipsis;
  display:-webkit-box; 
  font-size: 1rem;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:10; 
}
.aline{
 
  flex-direction: row;
  text-align: left;
  margin-bottom: 10rpx;
}

.aline text{
  color:#777;
  margin-left: 30rpx;
  font-size: 0.9rem;
}
